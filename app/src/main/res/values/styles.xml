<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern dark theme for Android TV -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/bg_primary</item>
        <item name="android:colorBackground">@color/bg_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Disable default focus highlight (we use custom) -->
        <item name="android:colorFocusedHighlight">@android:color/transparent</item>
    </style>
</resources>