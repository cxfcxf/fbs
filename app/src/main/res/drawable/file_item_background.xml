<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state - glowing indigo border with elevated background -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer glow effect -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#336366F1" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Inner card -->
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#334155" />
                    <stroke android:width="2dp" android:color="#818CF8" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Pressed state - deeper color -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#475569" />
            <stroke android:width="2dp" android:color="#6366F1" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Default state - subtle card appearance -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E293B" />
            <stroke android:width="1dp" android:color="#334155" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>